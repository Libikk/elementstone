{
  "exclude": ["build/**/*", "src/test/**/*"],
  "include": ["src/**/*"],
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./build",
    "rootDirs": ["./src", "./public"],
    "allowJs": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types/"],
    "types": ["node"]
  }
}
